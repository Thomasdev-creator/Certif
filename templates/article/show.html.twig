{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="display-3 text-center my-4 text-dark font-weight-bold">Article</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_comment_new', {'id': article.id}) }}" class="btn btn-primary">Ajouter un commentaire</a>
    </div>

    <div class="mt-4">
        {% for comment in comments %}
        <div class="border p-3 mb-3">
            <strong>{{ comment.user.email }}</strong> a dit :
            <p>{{ comment.content }}</p>
        </div>
        {% endfor %}
    </div>
{% endblock %}
