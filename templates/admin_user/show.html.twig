{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>User</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>IsVerified</th>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary mt-2">Back to list</a>
        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-warning mt-2">Edit</a>

        <div class="mt-3">
            {{ include('admin_user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
