{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Category</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary mt-2">Back to list</a>
        <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-warning mt-2">Edit</a>

        <div class="mt-3">
            {{ include('admin_category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
