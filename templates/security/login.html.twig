{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
    /* Par d√©faut, le bouton est bleu */
    .btn-custom {
        background-color: blue;
        color: white; 
        border-color: #007bff; 
    }

    /* Au survol, le bouton devient blanc avec du texte bleu */
    .btn-custom:hover {
        background-color: white !important;
        color: blue !important;
        border-color: blue !important;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="mt-5">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="display-3 text-center my-4 text-dark font-weight-bold">Please sign in</h1>

                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary btn-custom btn-block" type="submit">
                    Sign in
                </button>
                
            </form>
        </div>
    </div>
</div>

{% endblock %}
