{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="display-3 text-center my-4 text-dark font-weight-bold">Catégories</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Voir plus</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center text-muted">Aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

