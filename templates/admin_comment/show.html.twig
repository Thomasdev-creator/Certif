{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Comment</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ comment.id }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ comment.content }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_comment_index') }}" class="btn btn-secondary mt-2">Back to list</a>
        <a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" class="btn btn-warning mt-2">Edit</a>

        <div class="mt-3">
            {{ include('admin_comment/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
