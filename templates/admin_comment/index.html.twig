{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Comment index</h1>

        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Content</th>
                    <th>CreatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_admin_comment_show', {'id': comment.id}) }}" class="btn btn-info btn-sm">show</a>
                        <a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" class="btn btn-warning btn-sm">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_comment_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
