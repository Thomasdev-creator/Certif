{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Article</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ article.title }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ article.content }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_article_index') }}" class="btn btn-secondary mt-2">Back to list</a>
        <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-warning mt-2">Edit</a>

        <div class="mt-3">
            {{ include('admin_article/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
